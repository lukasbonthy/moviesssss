<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Darkflix • Movies</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ["system-ui", "SF Pro Text", "Inter", "sans-serif"],
          },
          colors: {
            dpBg: "#040714",
            dpBgSoft: "#05091f",
            dpAccent: "#00b3ff",
            dpAccentSoft: "#7b5eff",
            dpAccentWarn: "#ffcc00",
          },
          borderRadius: {
            "2xl-plus": "1.25rem",
          },
          keyframes: {
            "fade-up": {
              "0%": { opacity: 0, transform: "translateY(12px)" },
              "100%": { opacity: 1, transform: "translateY(0)" },
            },
            "nav-blur": {
              "0%": { backdropFilter: "blur(0px)" },
              "100%": { backdropFilter: "blur(18px)" },
            },
            "hero-glow": {
              "0%,100%": { opacity: 0.8, transform: "scale(1)" },
              "50%": { opacity: 1, transform: "scale(1.03)" },
            },
          },
          animation: {
            "fade-up": "fade-up 0.5s ease-out forwards",
            "nav-blur": "nav-blur 0.3s ease-out forwards",
            "hero-glow": "hero-glow 4s ease-in-out infinite",
          },
          boxShadow: {
            "dp-soft": "0 18px 45px rgba(0,0,0,0.7)",
          },
        },
      },
    };
  </script>

  <style>
    body {
      background:
        radial-gradient(circle at 20% 0%, rgba(0, 179, 255, 0.35), transparent 55%),
        radial-gradient(circle at 80% 0%, rgba(123, 94, 255, 0.35), transparent 55%),
        radial-gradient(circle at 50% 100%, rgba(8, 47, 73, 0.9), #020617 70%);
    }
    .row-scroll {
      scrollbar-width: none;
    }
    .row-scroll::-webkit-scrollbar {
      display: none;
    }
    .noise-layer {
      pointer-events: none;
      position: fixed;
      inset: 0;
      mix-blend-mode: soft-light;
      opacity: 0.15;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 160 160' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='noStitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.45'/%3E%3C/svg%3E");
    }
  </style>
</head>
<body class="min-h-screen font-sans text-white antialiased bg-dpBg">
  <div class="noise-layer -z-10"></div>

  <div class="min-h-screen flex flex-col">
    <!-- NAVBAR -->
    <header id="mainNav"
            class="fixed top-0 left-0 right-0 z-30 transition-all duration-300 bg-gradient-to-b from-black/80 via-black/40 to-transparent">
      <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
        <div class="flex items-center gap-6">
          <a href="/movies" class="flex items-center">
            <!-- Logo styled like Disney+ glow -->
            <span class="text-2xl md:text-3xl font-black tracking-tight select-none">
              <span class="bg-gradient-to-r from-dpAccent via-white to-dpAccentSoft bg-clip-text text-transparent">
                Darkflix
              </span>
            </span>
          </a>
          <ul class="hidden md:flex items-center gap-5 text-sm">
            <li>
              <span class="font-semibold text-white">Movies</span>
            </li>
            <li>
              <a href="/tv" class="text-slate-300 hover:text-white transition-colors">Series</a>
            </li>
            <li class="text-slate-300 hover:text-white transition-colors cursor-pointer">
              Originals
            </li>
            <li class="text-slate-300 hover:text-white transition-colors cursor-pointer">
              Watchlist
            </li>
          </ul>
        </div>

        <div class="flex items-center gap-4">
          <!-- Search -->
          <form id="searchForm"
                class="hidden sm:flex items-center bg-black/50 rounded-full px-3 py-1 border border-white/10 shadow-sm shadow-black/40 backdrop-blur">
            <svg class="w-4 h-4 text-slate-300" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
            </svg>
            <input
              id="searchInput"
              type="text"
              placeholder="Search movies..."
              class="bg-transparent border-none outline-none text-xs text-white placeholder:text-slate-400 px-2 w-40"
            />
          </form>

          <!-- Mobile search icon -->
          <button id="mobileSearchBtn" class="sm:hidden text-slate-100">
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
            </svg>
          </button>

          <!-- Profile -->
          <div class="flex items-center gap-3">
            <% if (currentUser) { %>
              <div class="relative group">
                <button type="button" class="flex items-center gap-2 text-xs text-slate-200 hover:text-white">
                  <span class="inline-flex h-8 w-8 rounded-full overflow-hidden bg-gradient-to-br from-dpAccent to-dpAccentSoft items-center justify-center text-[11px] font-semibold border border-white/10 shadow shadow-black/60">
                    <%= currentUser.name.charAt(0).toUpperCase() %>
                  </span>
                  <span class="hidden sm:inline"><%= currentUser.name %></span>
                  <svg class="w-3 h-3 hidden sm:block" xmlns="http://www.w3.org/2000/svg" fill="none"
                       viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="absolute right-0 mt-1 w-44 bg-[#06091e]/98 border border-white/10 rounded-2xl shadow-xl shadow-black/80 py-1 text-xs opacity-0 scale-95 pointer-events-none group-hover:opacity-100 group-hover:scale-100 group-hover:pointer-events-auto transition-all origin-top-right backdrop-blur">
                  <a href="/profile" class="block px-3 py-2 hover:bg-white/10 rounded-t-2xl">
                    Account
                  </a>
                  <a href="/tv" class="block px-3 py-2 hover:bg-white/10">
                    Browse Series
                  </a>
                  <form action="/logout" method="POST" class="border-t border-white/10 mt-1">
                    <button
                      type="submit"
                      class="w-full text-left px-3 py-2 hover:bg-white/10 text-red-200 rounded-b-2xl">
                      Sign out
                    </button>
                  </form>
                </div>
              </div>
            <% } else { %>
              <a href="/login"
                 class="text-xs px-4 py-1.5 rounded-full bg-white text-black font-semibold shadow shadow-black/60 hover:bg-slate-100">
                Log In
              </a>
            <% } %>
          </div>
        </div>
      </nav>
    </header>

    <!-- MAIN -->
    <main class="flex-1">
      <!-- HERO -->
      <section id="heroSection"
               class="relative h-[70vh] min-h-[430px] max-h-[780px] overflow-hidden">
        <div id="heroBackdrop"
             class="absolute inset-0 bg-cover bg-center scale-110 blur-[2px] transition-transform duration-[1600ms] ease-out"></div>
        <div class="absolute inset-0 bg-gradient-to-b from-black/85 via-[#040714]/60 to-[#040714]"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-black/85 via-black/40 to-transparent"></div>

        <!-- Little arc glow at bottom (Disney+ vibe) -->
        <div class="pointer-events-none absolute bottom-[-25%] left-1/2 -translate-x-1/2 w-[140%] h-[80%] rounded-[100%] bg-gradient-to-t from-[#0ea5e9]/40 via-transparent to-transparent blur-3xl opacity-40 animate-hero-glow"></div>

        <div class="relative z-10 max-w-6xl mx-auto h-full px-4 flex items-end pb-16 md:pb-24">
          <div class="max-w-xl animate-fade-up">
            <p class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.3em] text-dpAccent mb-3">
              <span class="inline-flex h-1 w-7 rounded-full bg-gradient-to-r from-dpAccent to-dpAccentSoft"></span>
              Featured Movie
            </p>

            <h1 id="heroTitle" class="text-3xl md:text-5xl lg:text-6xl font-black drop-shadow-2xl mb-3">
              Featured Title
            </h1>

            <p id="heroMeta" class="text-xs md:text-sm text-slate-100 mb-2"></p>

            <p id="heroOverview"
               class="hidden sm:block text-sm md:text-[0.95rem] text-slate-200/90 mb-5 line-clamp-3">
            </p>

            <div class="flex flex-wrap items-center gap-3">
              <button id="heroPlayBtn"
                      class="flex items-center gap-2 bg-white text-black font-semibold text-sm md:text-base px-5 py-2.5 rounded-full hover:bg-slate-100 shadow-md shadow-black/50">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6 4.5v11l8-5.5-8-5.5z" />
                </svg>
                Play
              </button>
              <button id="heroMoreBtn"
                      class="flex items-center gap-2 bg-white/10 text-white font-semibold text-xs md:text-sm px-4 py-2.5 rounded-full hover:bg-white/20 border border-white/20 backdrop-blur">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg"
                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 4v16m8-8H4" />
                </svg>
                Details
              </button>
            </div>
          </div>
        </div>
      </section>

      <!-- CONTENT -->
      <section class="bg-gradient-to-b from-[#040714] via-[#020617] to-black pt-6 pb-16">
        <div class="max-w-6xl mx-auto px-4">
          <!-- Search -->
          <div id="searchSection" class="hidden mb-10">
            <div class="flex items-center justify-between mb-2">
              <div class="flex flex-col gap-0.5">
                <h2 id="searchTitle" class="text-base md:text-lg font-semibold">
                  Search Results
                </h2>
                <p class="text-[11px] text-slate-400">
                  Movies that match your search.
                </p>
              </div>
              <button
                id="clearSearchBtn"
                class="text-xs text-slate-300 hover:text-white">
                Clear
              </button>
            </div>
            <div id="searchRow" class="row-scroll flex gap-3 overflow-x-auto pb-2"></div>
          </div>

          <!-- Status -->
          <p id="statusMessage" class="text-sm text-slate-300 mb-3 hidden"></p>

          <!-- Category rows -->
          <div id="rowsContainer" class="space-y-8"></div>
        </div>
      </section>
    </main>
  </div>

  <script>
    // ===== CONFIG =====
    const TMDB_API_KEY = "<%= tmdbApiKey %>";
    const TMDB_BASE = "https://api.themoviedb.org/3";
    const TMDB_IMG = "https://image.tmdb.org/t/p/w500";
    const TMDB_BACKDROP = "https://image.tmdb.org/t/p/original";

    const CATEGORIES = [
      { key: "trending",    title: "Trending Now",        path: "/trending/movie/week" },
      { key: "popular",     title: "Popular on Darkflix", path: "/movie/popular" },
      { key: "top_rated",   title: "Top Rated",           path: "/movie/top_rated" },
      { key: "now_playing", title: "In Theatres",         path: "/movie/now_playing" },
      { key: "upcoming",    title: "Coming Soon",         path: "/movie/upcoming" },
    ];

    // ===== DOM =====
    const rowsContainer   = document.getElementById("rowsContainer");
    const statusEl        = document.getElementById("statusMessage");
    const heroBackdropEl  = document.getElementById("heroBackdrop");
    const heroTitleEl     = document.getElementById("heroTitle");
    const heroMetaEl      = document.getElementById("heroMeta");
    const heroOverviewEl  = document.getElementById("heroOverview");
    const heroPlayBtn     = document.getElementById("heroPlayBtn");
    const heroMoreBtn     = document.getElementById("heroMoreBtn");
    const searchSection   = document.getElementById("searchSection");
    const searchTitleEl   = document.getElementById("searchTitle");
    const searchRowEl     = document.getElementById("searchRow");
    const searchForm      = document.getElementById("searchForm");
    const searchInput     = document.getElementById("searchInput");
    const mobileSearchBtn = document.getElementById("mobileSearchBtn");
    const clearSearchBtn  = document.getElementById("clearSearchBtn");
    const mainNav         = document.getElementById("mainNav");

    let currentHeroMovie = null;
    let heroSet = false;

    // ===== HELPERS =====
    function escapeHtml(str) {
      if (!str) return "";
      return String(str)
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;")
        .replace(/'/g, "&#039;");
    }

    function setStatus(msg, show = true) {
      statusEl.textContent = msg;
      statusEl.classList.toggle("hidden", !show);
    }

    async function fetchJson(url) {
      const res = await fetch(url);
      if (!res.ok) throw new Error("Network error");
      return res.json();
    }

    // Navbar blur on scroll (Disney+ style)
    window.addEventListener("scroll", () => {
      if (window.scrollY > 40) {
        mainNav.classList.add(
          "bg-black/80",
          "shadow-lg",
          "shadow-black/60",
          "backdrop-blur-md",
          "animate-nav-blur"
        );
      } else {
        mainNav.classList.remove(
          "bg-black/80",
          "shadow-lg",
          "shadow-black/60",
          "backdrop-blur-md",
          "animate-nav-blur"
        );
      }
    });

    // ===== ROWS =====
    function createRowElement(title, key) {
      const wrapper = document.createElement("section");
      wrapper.className = "space-y-2 js-row opacity-0 translate-y-3 transition-all duration-500";

      wrapper.innerHTML = `
        <div class="flex items-center justify-between">
          <h2 class="text-base md:text-lg font-semibold">${escapeHtml(title)}</h2>
        </div>
        <div id="row-${key}" class="row-scroll flex gap-3 overflow-x-auto pb-2"></div>
      `;

      rowsContainer.appendChild(wrapper);
      return document.getElementById(`row-${key}`);
    }

    function createCard(movie) {
      const id = movie.id;
      const title = movie.title || movie.name || "Untitled";
      const date = movie.release_date || movie.first_air_date || "";
      const year = date ? date.split("-")[0] : "";
      const vote = movie.vote_average || 0;
      const rating = vote ? vote.toFixed(1) : "";
      const imgPath = movie.poster_path || movie.backdrop_path;
      const imgSrc = imgPath
        ? TMDB_IMG + imgPath
        : "https://via.placeholder.com/500x750/020617/ffffff?text=No+Image";

      const card = document.createElement("article");
      card.className =
        "group relative flex-shrink-0 w-[44vw] sm:w-[160px] md:w-[180px] lg:w-[200px] cursor-pointer";

      card.innerHTML = `
        <div class="relative rounded-2xl-plus overflow-hidden bg-slate-900/60 border border-white/5 shadow-md shadow-black/70">
          <img src="${imgSrc}" alt="${escapeHtml(title)}"
               class="w-full aspect-[2/3] object-cover transition-transform duration-300 group-hover:scale-105" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

          <div class="absolute top-1.5 left-1.5 flex items-center gap-1 text-[10px] text-yellow-200 opacity-90">
            ${rating ? `<span class="px-1.5 py-0.5 rounded-full bg-black/70 border border-white/10">★ ${rating}</span>` : ""}
          </div>

          <div class="absolute bottom-1.5 left-1.5 right-1.5 flex flex-col gap-0.5 text-[10px] text-slate-200 opacity-0 group-hover:opacity-100 transition-opacity">
            <span class="font-semibold line-clamp-1">${escapeHtml(title)}</span>
            <div class="flex items-center justify-between">
              <span class="text-[10px] text-slate-300">Movie</span>
              ${year ? `<span class="text-slate-400">${year}</span>` : ""}
            </div>
          </div>
        </div>
      `;

      card.addEventListener("click", () => {
        const url = new URL("/watch", window.location.origin);
        url.searchParams.set("type", "movie");
        url.searchParams.set("tmdbId", id);
        window.location.href = url.toString();
      });

      return card;
    }

    function setHero(movie) {
      currentHeroMovie = movie;
      const title    = movie.title || movie.name || "Untitled";
      const overview = movie.overview || "";
      const backdrop = movie.backdrop_path || movie.poster_path || "";
      const date     = movie.release_date || movie.first_air_date || "";
      const year     = date ? date.split("-")[0] : "";
      const vote     = movie.vote_average || 0;
      const rating   = vote ? vote.toFixed(1) : "";

      const imgSrc = backdrop ? TMDB_BACKDROP + backdrop : null;
      if (imgSrc) {
        heroBackdropEl.style.backgroundImage = `url(${imgSrc})`;
        heroBackdropEl.style.transform = "scale(1.2)";
        setTimeout(() => {
          heroBackdropEl.style.transform = "scale(1.08)";
        }, 900);
      } else {
        heroBackdropEl.style.backgroundImage = "none";
        heroBackdropEl.style.backgroundColor = "#040714";
      }

      heroTitleEl.textContent = title;

      const metaBits = [];
      if (year) metaBits.push(year);
      if (rating) metaBits.push(`★ ${rating}`);
      heroMetaEl.textContent = metaBits.join("  •  ");
      heroOverviewEl.textContent = overview;

      const goToWatch = () => {
        if (!currentHeroMovie) return;
        const url = new URL("/watch", window.location.origin);
        url.searchParams.set("type", "movie");
        url.searchParams.set("tmdbId", currentHeroMovie.id);
        window.location.href = url.toString();
      };

      heroPlayBtn.onclick = goToWatch;
      heroMoreBtn.onclick = goToWatch;
    }

    async function loadCategoryRow(cat) {
      const rowEl = createRowElement(cat.title, cat.key);
      try {
        const url = cat.path.startsWith("/trending")
          ? `${TMDB_BASE}${cat.path}?api_key=${TMDB_API_KEY}`
          : `${TMDB_BASE}${cat.path}?api_key=${TMDB_API_KEY}&page=1`;
        const data = await fetchJson(url);
        const results = data.results || [];
        if (!results.length) return;

        if (!heroSet && (cat.key === "trending" || cat.key === "popular")) {
          setHero(results[0]);
          heroSet = true;
        }

        results.forEach((m) => rowEl.appendChild(createCard(m)));
      } catch (err) {
        console.error("Error loading category", cat.key, err);
      }
    }

    // ===== SEARCH =====
    async function handleSearch(q) {
      const query = q.trim();
      if (!query) {
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
        return;
      }
      try {
        setStatus("Searching...", true);
        const url = `${TMDB_BASE}/search/movie?api_key=${TMDB_API_KEY}&query=${encodeURIComponent(
          query
        )}&page=1`;
        const data = await fetchJson(url);
        const results = data.results || [];
        searchRowEl.innerHTML = "";

        if (!results.length) {
          searchTitleEl.textContent = `No results for "${query}"`;
          searchSection.classList.remove("hidden");
          setStatus("", false);
          return;
        }

        searchTitleEl.textContent = `Search results for "${query}"`;
        results.forEach((m) => searchRowEl.appendChild(createCard(m)));
        searchSection.classList.remove("hidden");
        setStatus("", false);
      } catch (err) {
        console.error(err);
        setStatus("Search failed. Please try again.", true);
      }
    }

    // Row entrance animation
    const rowObserver = "IntersectionObserver" in window
      ? new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.remove("opacity-0", "translate-y-3");
                entry.target.classList.add("animate-fade-up");
                rowObserver.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15 }
        )
      : null;

    function observeRows() {
      if (!rowObserver) return;
      document
        .querySelectorAll(".js-row")
        .forEach((row) => rowObserver.observe(row));
    }

    // Events
    if (searchForm && searchInput) {
      searchForm.addEventListener("submit", (e) => {
        e.preventDefault();
        handleSearch(searchInput.value);
      });
      searchInput.addEventListener("input", () => {
        if (!searchInput.value.trim()) {
          searchSection.classList.add("hidden");
          searchRowEl.innerHTML = "";
        }
      });
    }

    if (mobileSearchBtn) {
      mobileSearchBtn.addEventListener("click", () => {
        const q = prompt("Search movies:");
        if (q !== null) {
          if (searchInput) searchInput.value = q;
          handleSearch(q);
        }
      });
    }

    if (clearSearchBtn) {
      clearSearchBtn.addEventListener("click", () => {
        if (searchInput) searchInput.value = "";
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
      });
    }

    // Init
    (async function init() {
      try {
        setStatus("Loading movies...", true);
        await Promise.all(CATEGORIES.map(loadCategoryRow));
        observeRows();
        setStatus("", false);
      } catch (err) {
        console.error(err);
        setStatus("Failed to load movies.", true);
      }
    })();
  </script>
</body>
</html>
