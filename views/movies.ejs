<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Darkflix</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ["system-ui", "ui-sans-serif", "SF Pro Text", "Inter", "sans-serif"],
          },
          colors: {
            netflixBlack: "#141414",
            netflixRed: "#e50914",
          },
          keyframes: {
            'fade-up': {
              '0%': { opacity: 0, transform: 'translateY(12px)' },
              '100%': { opacity: 1, transform: 'translateY(0)' },
            },
            'hero-glow': {
              '0%, 100%': { opacity: 0.7 },
              '50%': { opacity: 1 },
            },
          },
          animation: {
            'fade-up': 'fade-up 0.6s ease-out forwards',
            'hero-glow': 'hero-glow 4s ease-in-out infinite',
          },
        },
      },
    };
  </script>

  <style>
    body {
      background:
        radial-gradient(circle at 0% 0%, rgba(248, 113, 113, 0.18), transparent 55%),
        radial-gradient(circle at 100% 0%, rgba(56, 189, 248, 0.16), transparent 55%),
        #000;
    }
    .row-scroll {
      scrollbar-width: none;
    }
    .row-scroll::-webkit-scrollbar {
      display: none;
    }
    .noise {
      pointer-events: none;
      position: fixed;
      inset: 0;
      opacity: 0.16;
      mix-blend-mode: soft-light;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 160 160' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='noStitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.45'/%3E%3C/svg%3E");
    }
  </style>
</head>
<body class="min-h-screen font-sans text-white antialiased bg-black">
  <div class="noise -z-10"></div>

  <div class="min-h-screen flex flex-col">
    <!-- NAVBAR -->
    <header id="mainNav" class="fixed top-0 left-0 right-0 z-30 transition-colors duration-300 bg-gradient-to-b from-black via-black/70 to-transparent">
      <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
        <div class="flex items-center gap-8">
          <a href="/movies" class="flex items-center">
            <span class="text-2xl md:text-3xl font-black tracking-tight text-netflixRed">
              DARKFLIX
            </span>
          </a>
          <ul class="hidden md:flex items-center gap-5 text-sm">
            <li><span class="font-semibold">Home</span></li>
            <li class="text-slate-300 hover:text-slate-100 cursor-pointer">TV Shows</li>
            <li class="text-slate-300 hover:text-slate-100 cursor-pointer">Movies</li>
            <li class="text-slate-300 hover:text-slate-100 cursor-pointer">My List</li>
          </ul>
        </div>

        <div class="flex items-center gap-4">
          <!-- Search -->
          <form id="searchForm" class="hidden sm:flex items-center bg-black/70 rounded-full px-3 py-1 border border-white/10 shadow-sm shadow-black/40">
            <svg class="w-4 h-4 text-slate-300" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
            </svg>
            <input
              id="searchInput"
              type="text"
              placeholder="Titles, people, genres"
              class="bg-transparent border-none outline-none text-xs text-white placeholder:text-slate-400 px-2 w-40"
            />
          </form>
          <button id="mobileSearchBtn" class="sm:hidden text-slate-100">
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
            </svg>
          </button>

          <!-- Profile -->
          <div class="flex items-center gap-3">
            <% if (currentUser) { %>
              <div class="relative group">
                <button class="flex items-center gap-2 text-xs text-slate-200 hover:text-white">
                  <span class="inline-flex h-7 w-7 rounded overflow-hidden bg-white/10 items-center justify-center text-[10px] font-semibold border border-white/10">
                    <%= currentUser.name.charAt(0).toUpperCase() %>
                  </span>
                  <span class="hidden sm:inline"><%= currentUser.name %></span>
                  <svg class="w-3 h-3 hidden sm:block" xmlns="http://www.w3.org/2000/svg" fill="none"
                       viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="absolute right-0 mt-1 w-40 bg-[#141414] border border-white/10 rounded-md shadow-lg shadow-black/70 py-1 text-xs opacity-0 scale-95 pointer-events-none group-hover:opacity-100 group-hover:scale-100 group-hover:pointer-events-auto transition-all">
                  <a href="/profile" class="block px-3 py-2 hover:bg-white/10">Account</a>
                  <a href="/movies" class="block px-3 py-2 hover:bg-white/10">Home</a>
                  <form action="/logout" method="POST" class="border-t border-white/10 mt-1">
                    <button
                      type="submit"
                      class="w-full text-left px-3 py-2 hover:bg-white/10 text-red-300">
                      Sign out
                    </button>
                  </form>
                </div>
              </div>
            <% } else { %>
              <a href="/login" class="text-xs px-4 py-1.5 rounded bg-netflixRed hover:bg-[#f6121d] font-semibold">
                Sign In
              </a>
            <% } %>
          </div>
        </div>
      </nav>
    </header>

    <!-- MAIN -->
    <main class="flex-1">
      <!-- HERO -->
      <section id="heroSection" class="relative h-[70vh] min-h-[430px] max-h-[780px] overflow-hidden">
        <div id="heroBackdrop" class="absolute inset-0 bg-cover bg-center scale-105 transition-transform duration-[1200ms] ease-out"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-netflixBlack via-netflixBlack/40 to-transparent"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/40 to-transparent"></div>

        <div class="relative z-10 max-w-6xl mx-auto h-full px-4 flex items-end pb-16 md:pb-24">
          <div class="max-w-xl animate-fade-up">
            <p class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.3em] text-red-400 mb-3">
              <span class="h-3 w-1 bg-red-500 rounded-full animate-hero-glow"></span>
              Darkflix Original
            </p>
            <h1 id="heroTitle" class="text-3xl md:text-5xl lg:text-6xl font-black drop-shadow-2xl mb-3">
              Featured Title
            </h1>
            <p id="heroMeta" class="text-xs md:text-sm text-slate-200 mb-2"></p>
            <p id="heroOverview" class="hidden sm:block text-sm md:text-[0.95rem] text-slate-200/90 mb-5 line-clamp-3"></p>

            <div class="flex flex-wrap items-center gap-3">
              <button id="heroPlayBtn"
                      class="flex items-center gap-2 bg-white text-black font-semibold text-sm md:text-base px-5 py-2.5 rounded hover:bg-slate-200 shadow-md shadow-black/50">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6 4.5v11l8-5.5-8-5.5z" />
                </svg>
                Play
              </button>
              <button id="heroMoreBtn"
                      class="flex items-center gap-2 bg-slate-500/70 text-white font-semibold text-xs md:text-sm px-4 py-2.5 rounded hover:bg-slate-400/80 border border-white/20">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg"
                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 4v16m8-8H4" />
                </svg>
                More Info
              </button>
            </div>
          </div>
        </div>
      </section>

      <!-- CONTENT ROWS -->
      <section class="bg-gradient-to-b from-black via-netflixBlack to-black pt-6 pb-16">
        <div class="max-w-6xl mx-auto px-4">
          <!-- Search Row -->
          <div id="searchSection" class="hidden mb-8">
            <div class="flex items-center justify-between mb-2">
              <h2 id="searchTitle" class="text-base md:text-lg font-semibold">
                Search Results
              </h2>
              <button
                id="clearSearchBtn"
                class="text-xs text-slate-300 hover:text-white">
                Clear
              </button>
            </div>
            <div id="searchRow" class="row-scroll flex gap-2 overflow-x-auto pb-2">
              <!-- search cards -->
            </div>
          </div>

          <!-- Status -->
          <p id="statusMessage" class="text-sm text-slate-300 mb-3 hidden"></p>

          <!-- Dynamic rows -->
          <div id="rowsContainer" class="space-y-7">
            <!-- rows injected -->
          </div>
        </div>
      </section>
    </main>
  </div>

  <script>
    // ====== CONFIG ======
    const TMDB_API_KEY = "<%= tmdbApiKey %>";
    const TMDB_BASE = "https://api.themoviedb.org/3";
    const TMDB_IMG = "https://image.tmdb.org/t/p/w500";
    const TMDB_BACKDROP = "https://image.tmdb.org/t/p/original";

    const CATEGORIES = [
      { key: "trending",    title: "Trending Now",            path: "/trending/movie/week" },
      { key: "popular",     title: "Popular on Darkflix",     path: "/movie/popular" },
      { key: "top_rated",   title: "Top Rated",               path: "/movie/top_rated" },
      { key: "now_playing", title: "Now Playing",             path: "/movie/now_playing" },
      { key: "upcoming",    title: "Coming Soon",             path: "/movie/upcoming" },
    ];

    // ====== DOM ======
    const rowsContainer   = document.getElementById("rowsContainer");
    const statusEl        = document.getElementById("statusMessage");
    const heroBackdropEl  = document.getElementById("heroBackdrop");
    const heroTitleEl     = document.getElementById("heroTitle");
    const heroMetaEl      = document.getElementById("heroMeta");
    const heroOverviewEl  = document.getElementById("heroOverview");
    const heroPlayBtn     = document.getElementById("heroPlayBtn");
    const heroMoreBtn     = document.getElementById("heroMoreBtn");
    const searchSection   = document.getElementById("searchSection");
    const searchTitleEl   = document.getElementById("searchTitle");
    const searchRowEl     = document.getElementById("searchRow");
    const searchForm      = document.getElementById("searchForm");
    const searchInput     = document.getElementById("searchInput");
    const mobileSearchBtn = document.getElementById("mobileSearchBtn");
    const clearSearchBtn  = document.getElementById("clearSearchBtn");
    const mainNav         = document.getElementById("mainNav");

    let currentHeroMovie = null;
    let heroSet = false;

    // ====== NAV SCROLL EFFECT ======
    window.addEventListener("scroll", () => {
      if (window.scrollY > 40) {
        mainNav.classList.add("bg-black/90", "shadow-lg", "shadow-black/60");
      } else {
        mainNav.classList.remove("bg-black/90", "shadow-lg", "shadow-black/60");
      }
    });

    // ====== UTILS ======
    async function fetchJson(url) {
      const res = await fetch(url);
      if (!res.ok) throw new Error("Network error");
      return res.json();
    }

    function setStatus(msg, show = true) {
      statusEl.textContent = msg;
      statusEl.classList.toggle("hidden", !show);
    }

    function createRowElement(title, rowKey) {
      const wrapper = document.createElement("section");
      wrapper.className = "space-y-2 js-row opacity-0 translate-y-3 transition-all duration-500";
      wrapper.innerHTML = `
        <div class="flex items-center justify-between">
          <h2 class="text-base md:text-lg font-semibold">${title}</h2>
        </div>
        <div id="row-${rowKey}"
             class="row-scroll flex gap-2 overflow-x-auto pb-2">
        </div>
      `;
      rowsContainer.appendChild(wrapper);
      return document.getElementById(`row-${rowKey}`);
    }

    function createCard(movie) {
      const {
        id,
        title,
        name,
        release_date,
        first_air_date,
        vote_average,
        poster_path,
        backdrop_path,
      } = movie;

      const displayTitle = title || name || "Untitled";
      const date = release_date || first_air_date || "";
      const year = date ? date.split("-")[0] : "";
      const rating = vote_average ? vote_average.toFixed(1) : "";
      const imgPath = poster_path || backdrop_path;
      const imgSrc = imgPath
        ? TMDB_IMG + imgPath
        : "https://via.placeholder.com/500x750/000000/ffffff?text=No+Image";

      const card = document.createElement("article");
      card.className =
        "group relative flex-shrink-0 w-[42vw] sm:w-[150px] md:w-[170px] lg:w-[190px] cursor-pointer";

      card.innerHTML = `
        <div class="relative rounded-sm overflow-hidden bg-slate-900">
          <img src="${imgSrc}" alt="${displayTitle}"
               class="w-full aspect-[2/3] object-cover transition-transform duration-300 group-hover:scale-110" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

          <div class="absolute bottom-1.5 left-1.5 right-1.5 flex flex-col gap-0.5 text-[10px] text-slate-200 opacity-0 group-hover:opacity-100 transition-opacity">
            <span class="font-semibold line-clamp-1">${displayTitle}</span>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-1">
                ${rating ? `<span class="px-1.5 py-0.5 rounded bg-black/80 text-[9px]">★ ${rating}</span>` : ""}
              </div>
              ${year ? `<span class="text-slate-400">${year}</span>` : ""}
            </div>
          </div>
        </div>
      `;

      card.addEventListener("click", () => {
        const url = new URL("/watch", window.location.origin);
        url.searchParams.set("type", "movie");
        url.searchParams.set("tmdbId", id);
        window.location.href = url.toString();
      });

      return card;
    }

    function setHero(movie) {
      currentHeroMovie = movie;
      const {
        title,
        name,
        overview,
        backdrop_path,
        poster_path,
        release_date,
        vote_average,
      } = movie;

      const displayTitle = title || name || "Untitled";
      const imgPath = backdrop_path || poster_path;
      const imgSrc = imgPath ? TMDB_BACKDROP + imgPath : null;
      const year = release_date ? release_date.split("-")[0] : "";
      const rating = vote_average ? vote_average.toFixed(1) : "";

      if (imgSrc) {
        heroBackdropEl.style.backgroundImage = `url(${imgSrc})`;
        heroBackdropEl.style.transform = "scale(1.08)";
        setTimeout(() => {
          heroBackdropEl.style.transform = "scale(1.02)";
        }, 800);
      } else {
        heroBackdropEl.style.backgroundImage = "none";
        heroBackdropEl.style.backgroundColor = "#000";
      }

      heroTitleEl.textContent = displayTitle;
      const metaParts = [];
      if (year) metaParts.push(year);
      if (rating) metaParts.push(`★ ${rating}`);
      heroMetaEl.textContent = metaParts.join("  •  ");
      heroOverviewEl.textContent = overview || "";

      const goToWatch = () => {
        if (!currentHeroMovie) return;
        const url = new URL("/watch", window.location.origin);
        url.searchParams.set("type", "movie");
        url.searchParams.set("tmdbId", currentHeroMovie.id);
        window.location.href = url.toString();
      };

      heroPlayBtn.onclick = goToWatch;
      heroMoreBtn.onclick = goToWatch;
    }

    // ====== LOAD CATEGORY ROWS ======
    async function loadCategoryRow(category) {
      const rowEl = createRowElement(category.title, category.key);
      try {
        const path = category.path.startsWith("/trending")
          ? `${TMDB_BASE}${category.path}?api_key=${TMDB_API_KEY}`
          : `${TMDB_BASE}${category.path}?api_key=${TMDB_API_KEY}&page=1`;
        const data = await fetchJson(path);
        const results = data.results || [];
        if (!results.length) return;

        // Set hero from trending/popular
        if (!heroSet && (category.key === "trending" || category.key === "popular")) {
          setHero(results[0]);
          heroSet = true;
        }

        results.forEach((m) => {
          rowEl.appendChild(createCard(m));
        });
      } catch (err) {
        console.error("Error loading category", category.key, err);
      }
    }

    // ====== SEARCH ======
    async function handleSearch(query) {
      const trimmed = query.trim();
      if (!trimmed) {
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
        return;
      }

      try {
        setStatus("Searching...", true);
        const params = new URLSearchParams({
          api_key: TMDB_API_KEY,
          query: trimmed,
          page: "1",
        });
        const url = `${TMDB_BASE}/search/movie?${params.toString()}`;
        const data = await fetchJson(url);
        const results = data.results || [];

        searchRowEl.innerHTML = "";
        if (!results.length) {
          searchTitleEl.textContent = `No results for "${trimmed}"`;
          searchSection.classList.remove("hidden");
          setStatus("", false);
          return;
        }

        searchTitleEl.textContent = `Search results for "${trimmed}"`;
        results.forEach((m) => searchRowEl.appendChild(createCard(m)));
        searchSection.classList.remove("hidden");
        setStatus("", false);
      } catch (err) {
        console.error(err);
        setStatus("Search failed. Please try again.", true);
      }
    }

    // ====== ROW ENTRANCE ANIMATION ======
    const rowObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.remove("opacity-0", "translate-y-3");
            entry.target.classList.add("animate-fade-up");
            rowObserver.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.15 }
    );

    function observeRows() {
      document.querySelectorAll(".js-row").forEach((row) => rowObserver.observe(row));
    }

    // ====== EVENTS ======
    searchForm?.addEventListener("submit", (e) => {
      e.preventDefault();
      handleSearch(searchInput.value);
    });

    searchInput?.addEventListener("input", () => {
      if (!searchInput.value.trim()) {
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
      }
    });

    mobileSearchBtn?.addEventListener("click", () => {
      const q = prompt("Search titles:");
      if (q !== null) {
        if (searchInput) searchInput.value = q;
        handleSearch(q);
      }
    });

    clearSearchBtn?.addEventListener("click", () => {
      if (searchInput) searchInput.value = "";
      searchSection.classList.add("hidden");
      searchRowEl.innerHTML = "";
    });

    // ====== INIT ======
    (async function init() {
      setStatus("Loading titles...", true);
      await Promise.all(CATEGORIES.map(loadCategoryRow));
      observeRows();
      setStatus("", false);
    })();
  </script>
</body>
</html>
