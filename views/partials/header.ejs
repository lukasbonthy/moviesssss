<header class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold tracking-tight">
    <span class="text-red-500">Dark</span>Auth
  </h1>

  <nav class="flex items-center gap-4 text-sm">
    <% if (currentUser) { %>
      <span class="text-slate-300 text-xs">Hi, <%= currentUser.name %></span>
      <form action="/logout" method="POST">
        <button
          type="submit"
          class="px-3 py-1 rounded bg-slate-800 hover:bg-slate-700 text-xs border border-slate-600">
          Logout
        </button>
      </form>
    <% } else { %>
      <a href="/login" class="text-slate-300 hover:text-white text-xs">Login</a>
      <a href="/signup" class="text-xs px-3 py-1 rounded bg-red-600 hover:bg-red-500">
        Sign up
      </a>
    <% } %>
  </nav>
</header>
