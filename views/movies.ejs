<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>StreamRealm+ • Movies</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ["system-ui", "SF Pro Text", "Inter", "sans-serif"],
          },
          colors: {
            srBg: "#040714",
            srNav: "#040714",
            srCard: "#0b1120",
            srAccent: "#00b0ff",
            srAccentSoft: "#38bdf8",
          },
          borderRadius: {
            "2xl-plus": "1.25rem",
          },
          keyframes: {
            "fade-up": {
              "0%": { opacity: 0, transform: "translateY(12px)" },
              "100%": { opacity: 1, transform: "translateY(0)" },
            },
            "loader-spin": {
              "0%": { transform: "rotate(0deg)" },
              "100%": { transform: "rotate(360deg)" },
            },
            "loader-pulse": {
              "0%,100%": { opacity: 0.4 },
              "50%": { opacity: 1 },
            },
          },
          animation: {
            "fade-up": "fade-up 0.4s ease-out forwards",
            "loader-spin": "loader-spin 1.1s linear infinite",
            "loader-pulse": "loader-pulse 2s ease-in-out infinite",
          },
        },
      },
    };
  </script>

  <style>
    body {
      background:
        radial-gradient(circle at 0% 0%, rgba(37, 99, 235, 0.55), transparent 55%),
        radial-gradient(circle at 100% 0%, rgba(0, 184, 255, 0.4), transparent 60%),
        #040714;
    }
    .row-scroll {
      scrollbar-width: none;
    }
    .row-scroll::-webkit-scrollbar {
      display: none;
    }
    .noise-layer {
      pointer-events: none;
      position: fixed;
      inset: 0;
      mix-blend-mode: soft-light;
      opacity: 0.2;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 160 160' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='4' stitchTiles='noStitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.45'/%3E%3C/svg%3E");
    }
  </style>
</head>
<body class="min-h-screen font-sans text-white antialiased bg-srBg">
  <div class="noise-layer -z-10"></div>

  <!-- FULLSCREEN LOADER -->
  <div id="appLoader"
       class="fixed inset-0 z-40 flex flex-col items-center justify-center bg-srBg transition-opacity duration-500">
    <div class="relative mb-6">
      <!-- subtle glow -->
      <div class="w-32 h-32 rounded-full bg-gradient-to-br from-srAccent/40 via-transparent to-srAccentSoft/45 blur-3xl opacity-80"></div>
      <!-- spinner -->
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="w-16 h-16 rounded-full border-[3px] border-slate-700 border-t-srAccent animate-loader-spin"></div>
      </div>
    </div>
    <div class="flex flex-col items-center gap-1 animate-loader-pulse">
      <div class="text-2xl font-semibold tracking-tight">
        StreamRealm<span class="text-srAccent align-super text-sm">+</span>
      </div>
      <p class="text-xs text-slate-300 uppercase tracking-[0.25em]">
        Starting stream
      </p>
    </div>
  </div>

  <div class="min-h-screen flex flex-col">
    <!-- NAVBAR -->
    <header class="fixed top-0 left-0 right-0 z-30 bg-srNav/95 backdrop-blur border-b border-white/5">
      <nav class="max-w-6xl mx-auto px-4 md:px-6 py-3 flex items-center justify-between">
        <div class="flex items-center gap-8">
          <!-- Brand (Disney+-feel, but unique text) -->
          <a href="/movies" class="flex items-center relative group">
            <span class="text-2xl md:text-[26px] font-semibold tracking-tight text-white select-none">
              StreamRealm<span class="text-srAccent align-super text-sm">+</span>
            </span>
            <!-- arc-like glow under logo -->
            <span class="pointer-events-none absolute -bottom-1 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-srAccent/80 to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></span>
          </a>

          <!-- Nav links in a single row -->
          <ul class="hidden md:flex items-center gap-6 text-[13px]">
            <li>
              <span class="font-semibold text-white">Home</span>
            </li>
            <li>
              <a href="/tv" class="text-slate-300 hover:text-white transition-colors">Series</a>
            </li>
            <li class="text-slate-300 hover:text-white cursor-pointer">
              Originals
            </li>
            <li class="text-slate-300 hover:text-white cursor-pointer">
              Movies
            </li>
            <li class="text-slate-300 hover:text-white cursor-pointer">
              Watchlist
            </li>
          </ul>
        </div>

        <div class="flex items-center gap-4">
          <!-- Search (top-right) -->
          <form id="searchForm"
                class="hidden sm:flex items-center bg-[#0b1120] rounded-full px-3 py-1 border border-white/10">
            <svg class="w-4 h-4 text-slate-300" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
            </svg>
            <input
              id="searchInput"
              type="text"
              placeholder="Search"
              class="bg-transparent border-none outline-none text-xs text-white placeholder:text-slate-400 px-2 w-36"
            />
          </form>

          <!-- Mobile search button -->
          <button id="mobileSearchBtn" class="sm:hidden text-slate-100">
            <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
            </svg>
          </button>

          <!-- Profile / login -->
          <div class="flex items-center gap-3">
            <% if (currentUser) { %>
              <div class="relative group">
                <button type="button"
                        class="flex items-center gap-2 text-xs text-slate-200 hover:text-white">
                  <span class="inline-flex h-8 w-8 rounded-full overflow-hidden bg-[#111827] items-center justify-center text-[11px] font-semibold border border-white/15">
                    <%= currentUser.name.charAt(0).toUpperCase() %>
                  </span>
                  <span class="hidden sm:inline"><%= currentUser.name %></span>
                  <svg class="w-3 h-3 hidden sm:block" xmlns="http://www.w3.org/2000/svg" fill="none"
                       viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div class="absolute right-0 mt-1 w-44 bg-[#050819]/98 border border-white/10 rounded-xl shadow-xl shadow-black/70 py-1 text-xs opacity-0 scale-95 pointer-events-none group-hover:opacity-100 group-hover:scale-100 group-hover:pointer-events-auto transition-all origin-top-right backdrop-blur">
                  <a href="/profile" class="block px-3 py-2 hover:bg-white/10 rounded-t-xl">
                    Account
                  </a>
                  <a href="/tv" class="block px-3 py-2 hover:bg-white/10">
                    Series
                  </a>
                  <form action="/logout" method="POST" class="border-t border-white/10 mt-1">
                    <button
                      type="submit"
                      class="w-full text-left px-3 py-2 hover:bg-white/10 text-red-200 rounded-b-xl">
                      Sign out
                    </button>
                  </form>
                </div>
              </div>
            <% } else { %>
              <a href="/login"
                 class="text-xs px-4 py-1.5 rounded-full bg-white text-black font-semibold hover:bg-slate-100">
                Log In
              </a>
            <% } %>
          </div>
        </div>
      </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-1 pt-16">
      <!-- HERO SECTION (big backdrop, text left, dark gradient) -->
      <section id="heroSection"
               class="relative h-[60vh] min-h-[380px] max-h-[640px] overflow-hidden">
        <div id="heroBackdrop"
             class="absolute inset-0 bg-cover bg-center scale-110 blur-[2px] transition-transform duration-[1600ms] ease-out"></div>
        <div class="absolute inset-0 bg-gradient-to-b from-black/85 via-[#040714]/70 to-[#040714]"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-black/85 via-black/55 to-transparent"></div>

        <div class="relative z-10 max-w-6xl mx-auto px-4 md:px-6 h-full flex items-end pb-10 md:pb-14">
          <div class="max-w-xl">
            <p class="inline-flex items-center gap-2 text-[11px] uppercase tracking-[0.25em] text-slate-200 mb-2">
              <span class="inline-flex h-[2px] w-6 rounded-full bg-srAccent"></span>
              Featured
            </p>

            <h1 id="heroTitle" class="text-3xl md:text-5xl font-bold mb-2">
              Featured Title
            </h1>

            <p id="heroMeta" class="text-xs md:text-sm text-slate-100 mb-2"></p>

            <p id="heroOverview"
               class="hidden sm:block text-sm md:text-[0.95rem] text-slate-200/90 mb-4 line-clamp-3">
            </p>

            <div class="flex flex-wrap items-center gap-3">
              <button id="heroPlayBtn"
                      class="flex items-center gap-2 bg-white text-black font-semibold text-sm md:text-[15px] px-5 py-2 rounded-md hover:bg-slate-100">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6 4.5v11l8-5.5-8-5.5z" />
                </svg>
                Play
              </button>
              <button id="heroMoreBtn"
                      class="flex items-center gap-2 bg-white/15 text-white font-semibold text-xs md:text-[13px] px-4 py-2 rounded-md hover:bg-white/25 border border-white/20">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg"
                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 4v16m8-8H4" />
                </svg>
                Details
              </button>
            </div>
          </div>
        </div>
      </section>

      <!-- CONTENT SECTIONS -->
      <section class="bg-gradient-to-b from-[#040714] via-[#020617] to-black pt-6 pb-16">
        <div class="max-w-6xl mx-auto px-4 md:px-6">
          <!-- “Brands row” – just decorative (like Disney / Pixar row, but generic) -->
          <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-5 gap-3 mb-10">
            <% const tiles = ["Realm Studios","Nova Animation","Echo Docs","Myth World","Galaxy Live"]; %>
            <% tiles.forEach(function(tile) { %>
              <div class="relative rounded-2xl-plus overflow-hidden bg-gradient-to-br from-srCard via-[#020617] to-srCard border border-white/10 aspect-[16/9] cursor-pointer group">
                <div class="absolute inset-0 bg-[radial-gradient(circle_at_0%_0%,rgba(56,189,248,0.3),transparent_55%),radial-gradient(circle_at_100%_0%,rgba(59,130,246,0.25),transparent_55%)] opacity-70 group-hover:opacity-100 transition-opacity"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                  <span class="text-xs sm:text-sm font-semibold tracking-[0.2em] uppercase text-slate-50">
                    <%= tile %>
                  </span>
                </div>
                <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-40 transition-opacity"></div>
              </div>
            <% }) %>
          </div>

          <!-- Search results rail -->
          <div id="searchSection" class="hidden mb-10">
            <div class="flex items-center justify-between mb-2">
              <div class="flex flex-col gap-0.5">
                <h2 id="searchTitle" class="text-sm md:text-base font-semibold">
                  Search results
                </h2>
                <p class="text-[11px] text-slate-400">
                  Titles matching your search.
                </p>
              </div>
              <button
                id="clearSearchBtn"
                class="text-xs text-slate-300 hover:text-white">
                Clear
              </button>
            </div>
            <div id="searchRow" class="row-scroll flex gap-3 overflow-x-auto pb-2"></div>
          </div>

          <!-- Status text -->
          <p id="statusMessage" class="text-sm text-slate-300 mb-3 hidden"></p>

          <!-- Category rails -->
          <div id="rowsContainer" class="space-y-8"></div>
        </div>
      </section>
    </main>
  </div>

  <script>
    // ===== CONFIG =====
    const TMDB_API_KEY = "<%= tmdbApiKey %>";
    const TMDB_BASE = "https://api.themoviedb.org/3";
    const TMDB_IMG = "https://image.tmdb.org/t/p/w500";
    const TMDB_BACKDROP = "https://image.tmdb.org/t/p/original";

    const CATEGORIES = [
      { key: "trending",    title: "Trending Now",      path: "/trending/movie/week" },
      { key: "popular",     title: "Popular Movies",    path: "/movie/popular" },
      { key: "top_rated",   title: "Top Rated",         path: "/movie/top_rated" },
      { key: "now_playing", title: "In Theatres",       path: "/movie/now_playing" },
      { key: "upcoming",    title: "Coming Soon",       path: "/movie/upcoming" },
    ];

    // ===== DOM =====
    const rowsContainer   = document.getElementById("rowsContainer");
    const statusEl        = document.getElementById("statusMessage");
    const heroBackdropEl  = document.getElementById("heroBackdrop");
    const heroTitleEl     = document.getElementById("heroTitle");
    const heroMetaEl      = document.getElementById("heroMeta");
    const heroOverviewEl  = document.getElementById("heroOverview");
    const heroPlayBtn     = document.getElementById("heroPlayBtn");
    const heroMoreBtn     = document.getElementById("heroMoreBtn");
    const searchSection   = document.getElementById("searchSection");
    const searchTitleEl   = document.getElementById("searchTitle");
    const searchRowEl     = document.getElementById("searchRow");
    const searchForm      = document.getElementById("searchForm");
    const searchInput     = document.getElementById("searchInput");
    const mobileSearchBtn = document.getElementById("mobileSearchBtn");
    const clearSearchBtn  = document.getElementById("clearSearchBtn");
    const appLoader       = document.getElementById("appLoader");

    let currentHeroMovie = null;
    let heroSet = false;
    let firstRowLoaded = false;

    // ===== HELPERS =====
    function escapeHtml(str) {
      if (!str) return "";
      return String(str)
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;")
        .replace(/'/g, "&#039;");
    }

    function setStatus(msg, show = true) {
      statusEl.textContent = msg;
      statusEl.classList.toggle("hidden", !show);
    }

    async function fetchJson(url) {
      const res = await fetch(url);
      if (!res.ok) throw new Error("Network error");
      return res.json();
    }

    function hideLoaderOnceReady() {
      if (firstRowLoaded && appLoader) {
        appLoader.classList.add("opacity-0", "pointer-events-none");
        setTimeout(() => {
          appLoader.style.display = "none";
        }, 500);
      }
    }

    // ===== ROWS =====
    function createRowElement(title, key) {
      const wrapper = document.createElement("section");
      wrapper.className = "space-y-2 js-row opacity-0 translate-y-3 transition-all duration-500";

      wrapper.innerHTML = `
        <div class="flex items-center justify-between">
          <h2 class="text-[13px] md:text-sm font-semibold text-slate-100 uppercase tracking-[0.12em]">
            ${escapeHtml(title)}
          </h2>
        </div>
        <div id="row-${key}" class="row-scroll flex gap-3 overflow-x-auto pb-2"></div>
      `;

      rowsContainer.appendChild(wrapper);
      return document.getElementById("row-" + key);
    }

    function createCard(movie) {
      const id = movie.id;
      const title = movie.title || movie.name || "Untitled";
      const date = movie.release_date || movie.first_air_date || "";
      const year = date ? date.split("-")[0] : "";
      const vote = movie.vote_average || 0;
      const rating = vote ? vote.toFixed(1) : "";
      const imgPath = movie.backdrop_path || movie.poster_path;
      const imgSrc = imgPath
        ? TMDB_IMG + imgPath
        : "https://via.placeholder.com/800x450/020617/ffffff?text=No+Image";

      const card = document.createElement("article");
      card.className =
        "group relative flex-shrink-0 w-[70vw] sm:w-[220px] md:w-[260px] lg:w-[280px] cursor-pointer";

      card.innerHTML = `
        <div class="relative rounded-xl overflow-hidden bg-srCard border border-transparent hover:border-srAccent/60 transition-colors duration-200">
          <img src="${imgSrc}" alt="${escapeHtml(title)}"
               class="w-full aspect-[16/9] object-cover transition-transform duration-300 group-hover:scale-[1.05]" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>

          <div class="absolute bottom-2 left-2 right-2 flex flex-col gap-0.5 text-[11px] text-slate-200 opacity-0 group-hover:opacity-100 transition-opacity">
            <span class="font-semibold line-clamp-1">${escapeHtml(title)}</span>
            <div class="flex items-center justify-between">
              <span class="text-slate-300">${year || ""}</span>
              ${rating ? `<span class="px-2 py-[2px] rounded-full bg-black/75 text-[10px] border border-white/15">★ ${rating}</span>` : ""}
            </div>
          </div>
        </div>
      `;

      card.addEventListener("click", () => {
        const url = new URL("/watch", window.location.origin);
        url.searchParams.set("type", "movie");
        url.searchParams.set("tmdbId", id);
        window.location.href = url.toString();
      });

      return card;
    }

    function setHero(movie) {
      currentHeroMovie = movie;
      const title    = movie.title || movie.name || "Untitled";
      const overview = movie.overview || "";
      const backdrop = movie.backdrop_path || movie.poster_path || "";
      const date     = movie.release_date || movie.first_air_date || "";
      const year     = date ? date.split("-")[0] : "";
      const vote     = movie.vote_average || 0;
      const rating   = vote ? vote.toFixed(1) : "";

      const imgSrc = backdrop ? TMDB_BACKDROP + backdrop : null;
      if (imgSrc) {
        heroBackdropEl.style.backgroundImage = `url(${imgSrc})`;
        heroBackdropEl.style.transform = "scale(1.1)";
        setTimeout(() => {
          heroBackdropEl.style.transform = "scale(1.05)";
        }, 900);
      } else {
        heroBackdropEl.style.backgroundImage = "none";
        heroBackdropEl.style.backgroundColor = "#040714";
      }

      heroTitleEl.textContent = title;

      const metaBits = [];
      if (year) metaBits.push(year);
      if (rating) metaBits.push(`★ ${rating}`);
      heroMetaEl.textContent = metaBits.join("  •  ");
      heroOverviewEl.textContent = overview;

      const goToWatch = () => {
        if (!currentHeroMovie) return;
        const url = new URL("/watch", window.location.origin);
        url.searchParams.set("type", "movie");
        url.searchParams.set("tmdbId", currentHeroMovie.id);
        window.location.href = url.toString();
      };

      heroPlayBtn.onclick = goToWatch;
      heroMoreBtn.onclick = goToWatch;
    }

    async function loadCategoryRow(category) {
      const rowEl = createRowElement(category.title, category.key);
      try {
        const url = category.path.startsWith("/trending")
          ? `${TMDB_BASE}${category.path}?api_key=${TMDB_API_KEY}`
          : `${TMDB_BASE}${category.path}?api_key=${TMDB_API_KEY}&page=1`;
        const data = await fetchJson(url);
        const results = data.results || [];
        if (!results.length) return;

        // use first popular/trending result as hero
        if (!heroSet && (category.key === "trending" || category.key === "popular")) {
          setHero(results[0]);
          heroSet = true;
        }

        results.forEach((m) => rowEl.appendChild(createCard(m)));

        if (!firstRowLoaded) {
          firstRowLoaded = true;
          hideLoaderOnceReady();
        }
      } catch (err) {
        console.error("Error loading category", category.key, err);
      }
    }

    // ===== SEARCH =====
    async function handleSearch(q) {
      const query = q.trim();
      if (!query) {
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
        return;
      }
      try {
        setStatus("Searching...", true);
        const url = `${TMDB_BASE}/search/movie?api_key=${TMDB_API_KEY}&query=${encodeURIComponent(
          query
        )}&page=1`;
        const data = await fetchJson(url);
        const results = data.results || [];
        searchRowEl.innerHTML = "";

        if (!results.length) {
          searchTitleEl.textContent = `No results for "${query}"`;
          searchSection.classList.remove("hidden");
          setStatus("", false);
          return;
        }

        searchTitleEl.textContent = `Search results for "${query}"`;
        results.forEach((m) => searchRowEl.appendChild(createCard(m)));
        searchSection.classList.remove("hidden");
        setStatus("", false);
      } catch (err) {
        console.error(err);
        setStatus("Search failed. Please try again.", true);
      }
    }

    // Row animation
    const rowObserver = "IntersectionObserver" in window
      ? new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.remove("opacity-0", "translate-y-3");
                entry.target.classList.add("animate-fade-up");
                rowObserver.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15 }
        )
      : null;

    function observeRows() {
      if (!rowObserver) return;
      document.querySelectorAll(".js-row").forEach((row) => rowObserver.observe(row));
    }

    // EVENTS
    if (searchForm && searchInput) {
      searchForm.addEventListener("submit", (e) => {
        e.preventDefault();
        handleSearch(searchInput.value);
      });
      searchInput.addEventListener("input", () => {
        if (!searchInput.value.trim()) {
          searchSection.classList.add("hidden");
          searchRowEl.innerHTML = "";
        }
      });
    }

    if (mobileSearchBtn) {
      mobileSearchBtn.addEventListener("click", () => {
        const q = prompt("Search titles:");
        if (q !== null) {
          if (searchInput) searchInput.value = q;
          handleSearch(q);
        }
      });
    }

    if (clearSearchBtn) {
      clearSearchBtn.addEventListener("click", () => {
        if (searchInput) searchInput.value = "";
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
      });
    }

    // INIT
    (async function init() {
      try {
        setStatus("Loading movies...", true);
        await Promise.all(CATEGORIES.map(loadCategoryRow));
        observeRows();
        setStatus("", false);
        hideLoaderOnceReady();
      } catch (err) {
        console.error(err);
        setStatus("Failed to load movies.", true);
        hideLoaderOnceReady();
      }
    })();
  </script>
</body>
</html>
