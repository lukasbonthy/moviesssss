<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>StreamRealm+ • Movies</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ["system-ui", "SF Pro Text", "Inter", "sans-serif"],
          },
          colors: {
            srBg: "#020617",
            srCard: "#020617",
            srCardSoft: "#0f172a",
            srAccent: "#22d3ee",
            srAccentSoft: "#38bdf8",
          },
          borderRadius: {
            "3xl": "1.75rem",
          },
          boxShadow: {
            "sr-xl": "0 32px 80px rgba(15,23,42,0.9)",
            "sr-soft": "0 18px 50px rgba(15,23,42,0.85)",
          },
          keyframes: {
            "fade-up": {
              "0%": { opacity: 0, transform: "translateY(12px)" },
              "100%": { opacity: 1, transform: "translateY(0)" },
            },
            "loader-spin": {
              "0%": { transform: "rotate(0deg)" },
              "100%": { transform: "rotate(360deg)" },
            },
            "loader-pulse": {
              "0%,100%": { opacity: 0.4 },
              "50%": { opacity: 1 },
            },
          },
          animation: {
            "fade-up": "fade-up 0.45s ease-out forwards",
            "loader-spin": "loader-spin 1.1s linear infinite",
            "loader-pulse": "loader-pulse 2s ease-in-out infinite",
          },
        },
      },
    };
  </script>

  <style>
    body {
      background:
        radial-gradient(circle at 0% 0%, rgba(56, 189, 248, 0.35), transparent 55%),
        radial-gradient(circle at 100% 0%, rgba(59, 130, 246, 0.45), transparent 60%),
        #020617;
    }
    .row-scroll {
      scrollbar-width: none;
    }
    .row-scroll::-webkit-scrollbar {
      display: none;
    }
    .noise-layer {
      pointer-events: none;
      position: fixed;
      inset: 0;
      mix-blend-mode: soft-light;
      opacity: 0.22;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 160 160' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.95' numOctaves='4' stitchTiles='noStitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.4'/%3E%3C/svg%3E");
    }
  </style>
</head>
<body class="min-h-screen font-sans text-white antialiased">
  <div class="noise-layer -z-10"></div>

  <!-- LOADER -->
  <div id="appLoader"
       class="fixed inset-0 z-40 flex flex-col items-center justify-center bg-[#020617] transition-opacity duration-500">
    <div class="relative mb-6">
      <div class="w-32 h-32 rounded-full bg-gradient-to-br from-srAccent/40 via-transparent to-srAccentSoft/50 blur-3xl opacity-80"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="w-16 h-16 rounded-full border-[3px] border-slate-700 border-t-srAccent animate-loader-spin"></div>
      </div>
    </div>
    <div class="flex flex-col items-center gap-1 animate-loader-pulse">
      <div class="text-2xl font-semibold tracking-tight">
        StreamRealm<span class="text-srAccent align-super text-sm">+</span>
      </div>
      <p class="text-xs text-slate-300 uppercase tracking-[0.26em]">
        LOADING LIBRARY
      </p>
    </div>
  </div>

  <div class="min-h-screen flex items-center justify-center px-4 py-6 md:py-10">
    <div class="max-w-6xl w-full mx-auto">
      <!-- APP SHELL -->
      <div class="rounded-[32px] md:rounded-[36px] bg-slate-900/70 border border-slate-200/10 backdrop-blur-2xl shadow-sr-xl overflow-hidden">
        <!-- HEADER -->
        <header class="px-5 md:px-9 pt-5 pb-3 flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="h-9 w-9 rounded-3xl bg-gradient-to-br from-srAccent to-srAccentSoft flex items-center justify-center text-xs font-bold text-slate-900 shadow-sr-soft">
              SR
            </div>
            <div class="flex flex-col">
              <span class="text-lg md:text-xl font-semibold tracking-tight">
                StreamRealm<span class="text-srAccent">+</span>
              </span>
              <span class="text-[11px] text-slate-400 -mt-0.5">
                Cinema, in your browser
              </span>
            </div>
          </div>

          <div class="flex items-center gap-4">
            <!-- Segmented control (Movies / Series / Originals) -->
            <div class="hidden sm:flex items-center bg-slate-900/80 rounded-full p-1 border border-white/10">
              <a href="/movies"
                 class="px-3 py-1.5 rounded-full bg-white text-slate-900 text-xs font-semibold shadow">
                Movies
              </a>
              <a href="/tv"
                 class="px-3 py-1.5 rounded-full text-xs text-slate-200 hover:bg-white/10">
                Series
              </a>
              <button
                 class="px-3 py-1.5 rounded-full text-xs text-slate-200 hover:bg-white/10">
                Originals
              </button>
            </div>

            <!-- Search -->
            <form id="searchForm"
                  class="hidden md:flex items-center bg-slate-900/80 rounded-full px-3 py-1 border border-white/10">
              <svg class="w-4 h-4 text-slate-300" xmlns="http://www.w3.org/2000/svg" fill="none"
                   viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
              </svg>
              <input
                id="searchInput"
                type="text"
                placeholder="Search movies"
                class="bg-transparent border-none outline-none text-xs text-white placeholder:text-slate-400 px-2 w-40"
              />
            </form>

            <!-- Mobile search icon -->
            <button id="mobileSearchBtn"
                    class="md:hidden h-8 w-8 rounded-full bg-slate-900/80 border border-white/10 flex items-center justify-center">
              <svg class="w-4 h-4 text-slate-100" xmlns="http://www.w3.org/2000/svg" fill="none"
                   viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 100-15 7.5 7.5 0 000 15z" />
              </svg>
            </button>

            <!-- Profile -->
            <div class="flex items-center gap-3">
              <% if (currentUser) { %>
                <div class="relative group">
                  <button type="button"
                          class="flex items-center gap-2 text-xs text-slate-200 hover:text-white">
                    <span class="inline-flex h-8 w-8 rounded-full overflow-hidden bg-slate-800 items-center justify-center text-[11px] font-semibold border border-white/15">
                      <%= currentUser.name.charAt(0).toUpperCase() %>
                    </span>
                    <span class="hidden sm:inline"><%= currentUser.name %></span>
                    <svg class="w-3 h-3 hidden sm:block" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                  <div class="absolute right-0 mt-1 w-44 bg-slate-900/98 border border-white/10 rounded-xl shadow-xl shadow-black/80 py-1 text-xs opacity-0 scale-95 pointer-events-none group-hover:opacity-100 group-hover:scale-100 group-hover:pointer-events-auto transition-all origin-top-right backdrop-blur">
                    <a href="/profile" class="block px-3 py-2 hover:bg-white/10 rounded-t-xl">
                      Account
                    </a>
                    <a href="/tv" class="block px-3 py-2 hover:bg-white/10">
                      Series
                    </a>
                    <form action="/logout" method="POST" class="border-t border-white/10 mt-1">
                      <button
                        type="submit"
                        class="w-full text-left px-3 py-2 hover:bg-white/10 text-red-200 rounded-b-xl">
                        Sign out
                      </button>
                    </form>
                  </div>
                </div>
              <% } else { %>
                <a href="/login"
                   class="text-xs px-4 py-1.5 rounded-full bg-white text-black font-semibold hover:bg-slate-100">
                  Log In
                </a>
              <% } %>
            </div>
          </div>
        </header>

        <!-- MAIN CONTENT -->
        <main class="px-5 md:px-9 pb-7 space-y-7">
          <!-- HERO ROW -->
          <section class="space-y-5 mt-1">
            <div class="grid md:grid-cols-[minmax(0,1.3fr)_minmax(0,0.9fr)] gap-4 md:gap-6">
              <!-- Hero card -->
              <article
                class="relative rounded-[24px] md:rounded-[26px] overflow-hidden bg-slate-900/90 border border-white/10 shadow-sr-soft">
                <div id="heroBackdrop"
                     class="absolute inset-0 bg-cover bg-center opacity-70"></div>
                <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/55 to-transparent"></div>

                <div class="relative z-10 p-5 md:p-8 flex flex-col justify-between min-h-[220px] md:min-h-[260px]">
                  <div class="flex items-center gap-2 text-[11px] text-slate-200 mb-2">
                    <span class="inline-flex items-center gap-1 rounded-full bg-black/40 border border-white/15 px-2 py-[3px]">
                      <span class="h-1.5 w-1.5 rounded-full bg-emerald-400 animate-pulse"></span>
                      Now Streaming
                    </span>
                  </div>

                  <div class="space-y-2">
                    <h1 id="heroTitle" class="text-2xl md:text-[2.1rem] font-bold leading-tight drop-shadow-2xl">
                      Featured Movie
                    </h1>
                    <p id="heroMeta"
                       class="text-xs md:text-[13px] text-slate-200/90">
                    </p>
                    <p id="heroOverview"
                       class="hidden sm:block text-xs md:text-[13px] text-slate-100/90 max-w-xl line-clamp-3">
                    </p>
                  </div>

                  <div class="mt-4 flex flex-wrap items-center gap-3">
                    <button id="heroPlayBtn"
                            class="flex items-center gap-2 bg-white text-black font-semibold text-xs md:text-[13px] px-4 py-2 rounded-full shadow shadow-black/40 hover:bg-slate-100">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M6 4.5v11l8-5.5-8-5.5z" />
                      </svg>
                      Play Movie
                    </button>
                    <button id="heroMoreBtn"
                            class="flex items-center gap-2 bg-white/10 text-white font-semibold text-[11px] md:text-[12px] px-4 py-2 rounded-full hover:bg-white/18 border border-white/30">
                      <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg"
                           fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 4v16m8-8H4" />
                      </svg>
                      Details
                    </button>
                  </div>
                </div>
              </article>

              <!-- Up next list -->
              <aside class="hidden md:flex flex-col gap-3">
                <div class="flex items-center justify-between">
                  <h2 class="text-sm font-semibold text-slate-100">
                    Up next
                  </h2>
                  <span class="text-[11px] text-slate-400">Auto-play queue</span>
                </div>
                <div id="upNextList" class="flex flex-col gap-2">
                  <!-- Items injected by JS -->
                </div>
              </aside>
            </div>

            <!-- Genre / tag pills -->
            <div class="flex flex-wrap gap-2 md:gap-3">
              <% const pills = ["Trending", "Action", "Romance", "Animation", "Horror", "Sci-Fi", "Family"]; %>
              <% pills.forEach(function(pill, idx) { %>
                <button
                  type="button"
                  class="<%= idx === 0 ? 'bg-slate-100 text-slate-900' : 'bg-slate-900/60 text-slate-200' %> px-3 md:px-4 py-1.5 rounded-full text-[11px] md:text-xs border border-white/10 backdrop-blur hover:bg-slate-100 hover:text-slate-900 transition-colors">
                  <%= pill %>
                </button>
              <% }) %>
            </div>
          </section>

          <!-- SEARCH RESULTS -->
          <section id="searchSection" class="hidden space-y-2">
            <div class="flex items-center justify-between">
              <div class="flex flex-col gap-0.5">
                <h2 id="searchTitle" class="text-sm md:text-base font-semibold">
                  Search results
                </h2>
                <p class="text-[11px] text-slate-400">
                  Titles matching your search.
                </p>
              </div>
              <button
                id="clearSearchBtn"
                class="text-xs text-slate-300 hover:text-white">
                Clear
              </button>
            </div>
            <div id="searchRow" class="row-scroll flex gap-3 overflow-x-auto pb-1"></div>
          </section>

          <!-- STATUS MESSAGE -->
          <p id="statusMessage" class="text-sm text-slate-300 hidden"></p>

          <!-- MOVIE ROWS -->
          <section id="rowsContainer" class="space-y-7"></section>
        </main>
      </div>
    </div>
  </div>

  <script>
    // ===== CONFIG =====
    const TMDB_API_KEY = "<%= tmdbApiKey %>";
    const TMDB_BASE = "https://api.themoviedb.org/3";
    const TMDB_IMG = "https://image.tmdb.org/t/p/w500";
    const TMDB_BACKDROP = "https://image.tmdb.org/t/p/original";

    const CATEGORIES = [
      { key: "trending",    title: "Trending now",    path: "/trending/movie/week" },
      { key: "popular",     title: "Popular movies",  path: "/movie/popular" },
      { key: "top_rated",   title: "Top rated",       path: "/movie/top_rated" },
      { key: "now_playing", title: "In theatres",     path: "/movie/now_playing" },
      { key: "upcoming",    title: "Coming soon",     path: "/movie/upcoming" },
    ];

    // ===== DOM =====
    const rowsContainer   = document.getElementById("rowsContainer");
    const statusEl        = document.getElementById("statusMessage");
    const heroBackdropEl  = document.getElementById("heroBackdrop");
    const heroTitleEl     = document.getElementById("heroTitle");
    const heroMetaEl      = document.getElementById("heroMeta");
    const heroOverviewEl  = document.getElementById("heroOverview");
    const heroPlayBtn     = document.getElementById("heroPlayBtn");
    const heroMoreBtn     = document.getElementById("heroMoreBtn");
    const upNextListEl    = document.getElementById("upNextList");
    const searchSection   = document.getElementById("searchSection");
    const searchTitleEl   = document.getElementById("searchTitle");
    const searchRowEl     = document.getElementById("searchRow");
    const searchForm      = document.getElementById("searchForm");
    const searchInput     = document.getElementById("searchInput");
    const mobileSearchBtn = document.getElementById("mobileSearchBtn");
    const clearSearchBtn  = document.getElementById("clearSearchBtn");
    const appLoader       = document.getElementById("appLoader");

    let currentHeroMovie = null;
    let heroSet = false;
    let firstRowLoaded = false;

    // ===== HELPERS =====
    function escapeHtml(str) {
      if (!str) return "";
      return String(str)
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;")
        .replace(/'/g, "&#039;");
    }

    function setStatus(msg, show = true) {
      statusEl.textContent = msg;
      statusEl.classList.toggle("hidden", !show);
    }

    async function fetchJson(url) {
      const res = await fetch(url);
      if (!res.ok) throw new Error("Network error");
      return res.json();
    }

    function hideLoaderOnceReady() {
      if (firstRowLoaded && appLoader) {
        appLoader.classList.add("opacity-0", "pointer-events-none");
        setTimeout(() => {
          appLoader.style.display = "none";
        }, 500);
      }
    }

    function goToWatch(movieId) {
      const url = new URL("/watch", window.location.origin);
      url.searchParams.set("type", "movie");
      url.searchParams.set("tmdbId", movieId);
      window.location.href = url.toString();
    }

    // ===== ROW / CARD CREATION =====
    function createRowElement(title, key) {
      const section = document.createElement("section");
      section.className = "space-y-2 js-row opacity-0 translate-y-3 transition-all duration-500";

      section.innerHTML = `
        <div class="flex items-center justify-between">
          <h2 class="text-sm md:text-[15px] font-semibold text-slate-100">
            ${escapeHtml(title)}
          </h2>
          <button type="button"
                  class="text-[11px] text-slate-400 hover:text-slate-200 flex items-center gap-1">
            <span>See all</span>
            <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
        <div id="row-${key}" class="row-scroll flex gap-3 overflow-x-auto pb-1"></div>
      `;

      rowsContainer.appendChild(section);
      return document.getElementById("row-" + key);
    }

    function createPosterCard(movie) {
      const id = movie.id;
      const title = movie.title || movie.name || "Untitled";
      const date = movie.release_date || movie.first_air_date || "";
      const year = date ? date.split("-")[0] : "";
      const vote = movie.vote_average || 0;
      const rating = vote ? vote.toFixed(1) : "";
      const imgPath = movie.poster_path || movie.backdrop_path;
      const imgSrc = imgPath
        ? TMDB_IMG + imgPath
        : "https://via.placeholder.com/400x600/020617/ffffff?text=No+Image";

      const card = document.createElement("article");
      card.className =
        "group relative flex-shrink-0 w-[110px] sm:w-[130px] md:w-[145px] cursor-pointer";

      card.innerHTML = `
        <div class="relative rounded-[18px] overflow-hidden bg-srCardSoft border border-white/10 shadow-sr-soft">
          <img src="${imgSrc}" alt="${escapeHtml(title)}"
               class="w-full aspect-[2/3] object-cover transition-transform duration-300 group-hover:scale-[1.04]" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent opacity-80"></div>

          ${
            rating
              ? `<div class="absolute top-2 left-2 h-7 w-7 rounded-full bg-black/70 border border-amber-300/70 flex items-center justify-center text-[10px] text-amber-200 font-semibold">
                  ${rating}
                 </div>`
              : ""
          }

          <div class="absolute bottom-2 left-2 right-2 text-[11px] text-slate-100 space-y-0.5">
            <p class="font-semibold line-clamp-1">${escapeHtml(title)}</p>
            <div class="flex items-center justify-between text-[10px] text-slate-300">
              <span>${year || ""}</span>
              <span class="inline-flex items-center gap-1">
                <span class="h-1.5 w-1.5 rounded-full bg-srAccent"></span>
                Movie
              </span>
            </div>
          </div>
        </div>
      `;

      card.addEventListener("click", () => goToWatch(id));
      return card;
    }

    function createUpNextItem(movie, index) {
      const id = movie.id;
      const title = movie.title || movie.name || "Untitled";
      const date = movie.release_date || movie.first_air_date || "";
      const year = date ? date.split("-")[0] : "";
      const imgPath = movie.backdrop_path || movie.poster_path;
      const imgSrc = imgPath
        ? TMDB_IMG + imgPath
        : "https://via.placeholder.com/600x338/020617/ffffff?text=No+Image";

      const el = document.createElement("button");
      el.type = "button";
      el.className =
        "flex items-center gap-3 rounded-2xl bg-slate-900/70 border border-white/10 px-3 py-2 hover:bg-slate-800/90 transition-colors";

      el.innerHTML = `
        <div class="h-9 w-9 rounded-2xl overflow-hidden bg-slate-800 flex-shrink-0">
          <img src="${imgSrc}" alt="${escapeHtml(title)}" class="w-full h-full object-cover" />
        </div>
        <div class="flex flex-col items-start text-left">
          <span class="text-[12px] font-medium text-slate-100 line-clamp-1">${escapeHtml(title)}</span>
          <span class="text-[10px] text-slate-400">${year || ""}</span>
        </div>
        <span class="ml-auto text-[11px] text-slate-400">
          #${index + 1}
        </span>
      `;

      el.addEventListener("click", () => goToWatch(id));
      return el;
    }

    function setHero(movie) {
      currentHeroMovie = movie;
      const title    = movie.title || movie.name || "Untitled";
      const overview = movie.overview || "";
      const backdrop = movie.backdrop_path || movie.poster_path || "";
      const date     = movie.release_date || movie.first_air_date || "";
      const year     = date ? date.split("-")[0] : "";
      const vote     = movie.vote_average || 0;
      const rating   = vote ? vote.toFixed(1) : "";
      const genres   = movie.genre_ids || [];

      const imgSrc = backdrop ? TMDB_BACKDROP + backdrop : null;
      if (imgSrc) {
        heroBackdropEl.style.backgroundImage = `url(${imgSrc})`;
      } else {
        heroBackdropEl.style.backgroundImage = "none";
        heroBackdropEl.style.backgroundColor = "#020617";
      }

      heroTitleEl.textContent = title;

      const metaBits = [];
      if (rating) metaBits.push(`★ ${rating}`);
      if (year) metaBits.push(year);
      if (genres && genres.length) metaBits.push("Movie");
      heroMetaEl.textContent = metaBits.join("   •   ");

      heroOverviewEl.textContent = overview;

      const go = () => {
        if (!currentHeroMovie) return;
        goToWatch(currentHeroMovie.id);
      };

      heroPlayBtn.onclick = go;
      heroMoreBtn.onclick = go;
    }

    function populateUpNext(movies) {
      if (!upNextListEl) return;
      upNextListEl.innerHTML = "";
      movies.slice(1, 5).forEach((m, i) => {
        upNextListEl.appendChild(createUpNextItem(m, i));
      });
    }

    async function loadCategoryRow(category) {
      const rowEl = createRowElement(category.title, category.key);
      try {
        const url = category.path.startsWith("/trending")
          ? `${TMDB_BASE}${category.path}?api_key=${TMDB_API_KEY}`
          : `${TMDB_BASE}${category.path}?api_key=${TMDB_API_KEY}&page=1`;
        const data = await fetchJson(url);
        const results = data.results || [];
        if (!results.length) return;

        if (!heroSet && category.key === "trending") {
          setHero(results[0]);
          populateUpNext(results);
          heroSet = true;
        }

        results.forEach((m) => rowEl.appendChild(createPosterCard(m)));

        if (!firstRowLoaded) {
          firstRowLoaded = true;
          hideLoaderOnceReady();
        }
      } catch (err) {
        console.error("Error loading category", category.key, err);
      }
    }

    // ===== SEARCH =====
    async function handleSearch(q) {
      const query = q.trim();
      if (!query) {
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
        return;
      }
      try {
        setStatus("Searching...", true);
        const url = `${TMDB_BASE}/search/movie?api_key=${TMDB_API_KEY}&query=${encodeURIComponent(
          query
        )}&page=1`;
        const data = await fetchJson(url);
        const results = data.results || [];
        searchRowEl.innerHTML = "";

        if (!results.length) {
          searchTitleEl.textContent = `No results for "${query}"`;
          searchSection.classList.remove("hidden");
          setStatus("", false);
          return;
        }

        searchTitleEl.textContent = `Search results for "${query}"`;
        results.forEach((m) => searchRowEl.appendChild(createPosterCard(m)));
        searchSection.classList.remove("hidden");
        setStatus("", false);
      } catch (err) {
        console.error(err);
        setStatus("Search failed. Please try again.", true);
      }
    }

    // ===== ROW ANIMATION =====
    const rowObserver = "IntersectionObserver" in window
      ? new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.remove("opacity-0", "translate-y-3");
                entry.target.classList.add("animate-fade-up");
                rowObserver.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15 }
        )
      : null;

    function observeRows() {
      if (!rowObserver) return;
      document.querySelectorAll(".js-row").forEach((row) => rowObserver.observe(row));
    }

    // ===== EVENTS =====
    if (searchForm && searchInput) {
      searchForm.addEventListener("submit", (e) => {
        e.preventDefault();
        handleSearch(searchInput.value);
      });
      searchInput.addEventListener("input", () => {
        if (!searchInput.value.trim()) {
          searchSection.classList.add("hidden");
          searchRowEl.innerHTML = "";
        }
      });
    }

    function openPromptSearch() {
      const q = prompt("Search movies:");
      if (q !== null) {
        if (searchInput) searchInput.value = q;
        handleSearch(q);
      }
    }

    if (mobileSearchBtn) mobileSearchBtn.addEventListener("click", openPromptSearch);

    if (clearSearchBtn) {
      clearSearchBtn.addEventListener("click", () => {
        if (searchInput) searchInput.value = "";
        searchSection.classList.add("hidden");
        searchRowEl.innerHTML = "";
      });
    }

    // ===== INIT =====
    (async function init() {
      try {
        setStatus("Loading movies...", true);
        await Promise.all(CATEGORIES.map(loadCategoryRow));
        observeRows();
        setStatus("", false);
        hideLoaderOnceReady();
      } catch (err) {
        console.error(err);
        setStatus("Failed to load movies.", true);
        hideLoaderOnceReady();
      }
    })();
  </script>
</body>
